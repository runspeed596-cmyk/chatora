# ===========================================
# Chatora Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
#
# NEVER commit the .env file to version control!
# ===========================================

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Chatora
DB_USERNAME=postgres
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD

# --- JWT ---
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# --- Google Auth ---
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID

# --- Email (SMTP) ---
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=REPLACE_WITH_EMAIL
MAIL_PASSWORD=REPLACE_WITH_APP_PASSWORD

# --- 1xgate Payment ---
XGATE_API_KEY=REPLACE_WITH_XGATE_KEY
XGATE_BASE_URL=https://api.1xgate.com
XGATE_SUCCESS_URL=https://YOUR_DOMAIN/api/payment/success
XGATE_FAILED_URL=https://YOUR_DOMAIN/api/payment/failed

# --- CORS ---
# Comma-separated origins (restrict for production)
CORS_ALLOWED_ORIGINS=*
